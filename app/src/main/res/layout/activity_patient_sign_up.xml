<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <EditText
            android:id="@+id/edittext_patient_signup_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/edittext_patient_signup_email"
            android:background="@color/black" />

        <EditText
            android:id="@+id/edittext_patient_signup_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="91dp"
            android:layout_marginTop="79dp"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="textPersonName" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/edittext_patient_signup_phone"
            android:background="@color/black" />

        <EditText
            android:id="@+id/edittext_patient_signup_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="141dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/edittext_patient_signup_password"
            android:background="@color/black" />

        <EditText
            android:id="@+id/edittext_patient_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="211dp"
            android:ems="10"
            android:hint="First Name"
            android:inputType="textPersonName" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/edittext_patient_first_name"
            android:background="@color/black" />

        <EditText
            android:id="@+id/edittext_patient_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="89dp"
            android:layout_marginTop="283dp"
            android:ems="10"
            android:hint="Last Name"
            android:inputType="textPersonName" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/edittext_patient_last_name"
            android:background="@color/black" />

        <TextView
            android:id="@+id/edittext_patient_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_patient_last_name"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="89dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Gender"
            android:textSize="17dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/edittext_patient_gender"
            android:background="@color/black" />

        <TextView
            android:id="@+id/edittext_patient_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_patient_gender"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="31dp"
            android:ems="10"
            android:hint="Age"
            android:textSize="17dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/edittext_patient_age"
            android:background="@color/black" />

        <Button
            android:id="@+id/button_patient_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_patient_age"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="40dp"
            android:text="Create Account" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>